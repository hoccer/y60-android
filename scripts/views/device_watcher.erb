<html>
<head>
 <title>Device Watcher</title>
</head>

<body>
<% @dw.process_devices
    @dw.devices.each do |device|
    %>
	
	<h1><%= device.id %></h1>
    <%
        device.screenshot "#{Dir.pwd}/public/#{device.id}.png" 
    %>
	<img src="<%= "#{device.id}.png" %>" />

<% end %>
</body>

</html>
